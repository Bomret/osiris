# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /shaders                    controllers.ShaderController.getShaders
GET     /scenes                     controllers.SceneController.getAvailableScenes
POST    /shaders                    controllers.ShaderController.getShaderByName
GET     /socket                     controllers.SirisController.socket

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
